<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:id="@+id/inputEditText"
        tools:layout_height="130dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/button_say_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />
    <Button
        android:id="@+id/button_lower_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lower Case"
        />
    <Button
        android:id="@+id/button_upper_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upper Case"
        />
    <Button
        android:id="@+id/button_capitalize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capitalize"
        />
    <Button
        android:id="@+id/button_reverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reverse"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>